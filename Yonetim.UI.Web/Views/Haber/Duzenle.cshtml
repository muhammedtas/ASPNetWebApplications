@model HaberViewModel
@{
    ViewBag.Title = $"{Model.Baslik} Haberini Duzenle";
    Layout = "~/Views/_AdminLayoutPage.cshtml";
}

<h2>Duzenle</h2>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> @($"{Model.Baslik} Haberini Duzenle")</h1>
    </div>

</div>

<div class="row">
    <div class="col-md-12 ">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Haberler
                @Html.ValidationSummary()
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Duzenle", "Haber", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    <div class="form-group">

                        @Html.LabelFor(x => x.Baslik, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @*<input type="email" class="form-control" id="inputEmail3" />*@
                            @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", placeholder = "Haber Başlığı" })
                            @Html.ValidationMessageFor(x => x.Baslik)
                        </div>
                    </div>
                    @Html.HiddenFor(x=>x.Id)  // bu hiddenfor divlerin dışına bir yere yazman gerekir. 
                    <div class="form-group">
                        @*// Çoklu kategori seçimi için de bunu ekledik. Bir haberin bir den fazla kategorisi olabilir.*@

                        @Html.LabelFor(x => x.Kategoriler, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @*<input type="email" class="form-control" id="inputEmail3" />*@
                            @Html.ListBoxFor(x => x.Kategoriler, ViewBag.Kategoriler as List<SelectListItem>, new { @class = "form-control", size = 7 })

                        </div>
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(x => x.Icerik, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @*<input type="email" class="form-control" id="inputEmail3" />*@
                            @Html.TextAreaFor(x => x.Icerik, new { @class = "form-control", placeholder = "İçerik Açıklaması" })

                        </div>
                    </div>
                   
                    <div class="form-group"> @*//bir tane de ektstadan düzenleye yayında mı checkbox buttonu ekledik*@ 

                        @Html.LabelFor(x => x.YayindaMi, new { @class = "col-sm-2 control-label" })
                        <div class="checkbox">
                            <label><input type="checkbox" value="">@Html.CheckBoxFor(x => x.YayindaMi)</label>
                        </div>
                    </div>
                        <div class="form-group">

                            @Html.LabelFor(x => x.Keywords, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @*<input type="email" class="form-control" id="inputEmail3" />*@
                                @Html.TextBoxFor(x => x.Keywords, new { @class = "form-control", placeholder = "anahtar kelimeler" })

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Haberi Güncelle</button>
                            </div>
                        </div>
                }
            </div>

        </div>

    </div>

</div>