@model KategoriViewModel
@{
    ViewBag.Title = $"{Model.Ad} Kategorisini Duzenle";
    Layout = "~/Views/_AdminLayoutPage.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@($"{Model.Ad} Kategorisini Düzenle")</h1>
    </div>

</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Kategori Duzenle
             <span class="text-danger"> @Html.ValidationSummary() </span>   @*//yanlış düzenleme yaptığında uyarıyı kırmızı yazmanı sağladıç*@ 
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Duzenle", "Kategori", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    <div class="form-group">

                        @Html.LabelFor(x => x.Ad, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @*<input type="email" class="form-control" id="inputEmail3" />*@
                            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", placeholder = "Kategori Adı" })
                            @Html.ValidationMessageFor(x => x.Ad)
                        </div>
                    </div>
                    @Html.HiddenFor(x=>x.Id)
                        <div class="form-group">

                            @Html.LabelFor(x => x.Aciklama, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @*<input type="email" class="form-control" id="inputEmail3" />*@
                                @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control", placeholder = "Kategori Açıklaması" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Kategoriyi Kaydet</button>
                            </div>
                        </div>
                }
            </div>

        </div>

    </div>

</div>
